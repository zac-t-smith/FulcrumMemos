{
  "name": "Memo",
  "type": "object",
  "properties": {
    "title": {
      "type": "string",
      "description": "Memo title"
    },
    "slug": {
      "type": "string",
      "description": "URL-friendly identifier"
    },
    "company": {
      "type": "string",
      "description": "Company name"
    },
    "ticker_or_issuer_id": {
      "type": "string",
      "description": "Ticker or issuer identifier"
    },
    "memo_type": {
      "type": "string",
      "enum": [
        "RX",
        "Distressed Credit",
        "Special Sits",
        "Covenant Analysis",
        "Turnaround"
      ],
      "description": "Type of memo"
    },
    "status": {
      "type": "string",
      "enum": [
        "Public",
        "Private"
      ],
      "default": "Public",
      "description": "Visibility status"
    },
    "date_published": {
      "type": "string",
      "format": "date",
      "description": "Publication date"
    },
    "analysis_date": {
      "type": "string",
      "format": "date",
      "description": "Analysis date"
    },
    "thesis_one_liner": {
      "type": "string",
      "description": "Short thesis summary (160 chars max)"
    },
    "executive_summary": {
      "type": "string",
      "description": "Executive summary in markdown"
    },
    "capital_structure": {
      "type": "string",
      "description": "Capital structure details in markdown"
    },
    "timeline": {
      "type": "array",
      "description": "Key events timeline",
      "items": {
        "type": "object",
        "properties": {
          "date": {
            "type": "string"
          },
          "headline": {
            "type": "string"
          },
          "description": {
            "type": "string"
          }
        }
      }
    },
    "restructuring_mechanics": {
      "type": "string",
      "description": "Restructuring mechanics section in markdown"
    },
    "scenarios": {
      "type": "array",
      "description": "Recovery scenarios",
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          },
          "probability": {
            "type": "string"
          },
          "recovery_range": {
            "type": "string"
          },
          "notes": {
            "type": "string"
          }
        }
      }
    },
    "valuation": {
      "type": "string",
      "description": "Valuation analysis in markdown"
    },
    "recovery_waterfall": {
      "type": "string",
      "description": "Recovery waterfall in markdown"
    },
    "key_lessons": {
      "type": "array",
      "description": "Key lessons learned",
      "items": {
        "type": "string"
      }
    },
    "monitoring_plan": {
      "type": "array",
      "description": "Monitoring milestones",
      "items": {
        "type": "object",
        "properties": {
          "milestone_date": {
            "type": "string"
          },
          "event": {
            "type": "string"
          },
          "signal": {
            "type": "string"
          }
        }
      }
    },
    "sources": {
      "type": "array",
      "description": "Source citations",
      "items": {
        "type": "object",
        "properties": {
          "label": {
            "type": "string"
          },
          "url": {
            "type": "string"
          },
          "citation": {
            "type": "string"
          }
        }
      }
    },
    "tags": {
      "type": "array",
      "description": "Memo tags",
      "items": {
        "type": "string"
      }
    },
    "confidential_notes": {
      "type": "string",
      "description": "Private notes (only visible when status=Private)"
    },
    "show_pdf_download": {
      "type": "boolean",
      "default": true,
      "description": "Show PDF download button"
    },
    "seo_description": {
      "type": "string",
      "description": "SEO meta description"
    }
  },
  "required": [
    "title",
    "slug",
    "company",
    "memo_type"
  ]
}
